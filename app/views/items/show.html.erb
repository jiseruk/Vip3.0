	<%= @item.title %>
<% end %>
	
<%= render :partial => 'item_header' %>
<div id="tabsN">
	<ul id="description">
		<li group="description" class="TabbedPanelsTab" id="current">
			<a href="javascript:mostrarDescripcion();cambiarEstilos('HDescripción',0,'description')"><span><%=t :descripcion %></span></a>
		</li>
		<li group="description" class="TabbedPanelsTab">
			<a href="javascript:mostrarFicha();cambiarEstilos('HFichatécnica',0,'description')"><span>Ficha técnica</span></a>
		</li>
		<li group="description" class="TabbedPanelsTab" id="HOpinionesdelproducto">
			<a href="javascript:mostrarOpiniones();cambiarEstilos('HOpinionesdelproducto',0,'description')"><span><img border="0" src="http://img.mlstatic.com/org-img/listados/new/rank45.gif"> 10 opiniones <!-- http://opinion.mercadolibre.com.ar/ipod-touch-32-gb-tercera-generacion-584879-VCP --></span></a>
		</li>
	</ul>
</div>
<div id="descriptionCont">
	<div class="contentbox" id="Descripción"><%= @item.description %><!----></div>
</div>
<div align="center" class="contentbox" style="display: none;" id="Fichatécnica">
	<div id="catalogTab">
		<div id="fichasolapa">
			<div class="fondonobg"><h2>Especificaciones</h2></div>
			<div id="attr">
				<% for attribute in @catalogProductAttrs do %>
					<ul class="ul_simple">
						<li class="li_simple"><b><%= attribute.key %>:</b></li>
						<li class="li_simple_2"><%= attribute.value %></li>
					</ul>
				<% end %>
			</div>
			<div id="printspecs" class="printCatalog"><a href="javascript:print();">Imprimir ficha técnica</a></div>
			<div class="Spacer"></div>
		</div>
	</div>
</div>
<div id="reviewsTab" class="contentbox" style="display: none;" >
	<div id="solopis">
		<div class="fondo"><h2>Opiniones</h2></div>
		<div id="attr" style="margin-top: 10px;"><!-- STARS -->
			<div id="promedio">
				<h3>Promedio</h3>
				<span class="promedio"><img src="/org-img/reviews/<%= @product.get_balls_image_link %>BALLSON.gif" align="absbottom"><br>de <b><%= @reviews.length %> opiniones</b></span>
			</div>

			<div id="distribucion">
				<h3>Distribución del puntaje</h3>
		
				<div class="marcadores">Puntaje<br>
					<div class="lblquant">Opiniones</div>
				</div>    
		
				<div class="colstar">
					<img src="/org-img/reviews/5BALLSON.gif" align="absbottom"><br>
					<div class="quant"><%= @product.qty5 %></div>
				</div>
		
		
				<div class="colstar">
					<img src="/org-img/reviews/4BALLSON.gif" align="absbottom"><br>
					<div class="quant"><%= @product.qty4 %></div>
				</div>
		
				<div class="colstar">
					<img src="/org-img/reviews/3BALLSON.gif" align="absbottom"><br>
					<div class="quant"><%= @product.qty3 %></div>
				</div>
		
				<div class="colstar">
					<img src="/org-img/reviews/2BALLSON.gif" align="absbottom"><br>
					<div class="quant"><%= @product.qty2 %></div>
				</div>
		
				<div class="colstar">
					<img src="/org-img/reviews/1BALLSON.gif" align="absbottom"><br>
				<div class="quant"><%= @product.qty1 %></div>
			</div>
		</div>
		<div id="separador"></div>
		<div class="Spacer"></div>
	</div>
	<div class="Spacer"></div>
	<div id="list_reviews"><a name="tab405825"></a> 
		<% for review in @reviews do %>
		<div class="contopinion"> 
			<div class="titcalif"> 
				<div class="opcalif"><img src="/org-img/reviews/4BALLSON.gif" align="absbottom"> | </div> 
				<div style="" class="optitle">El "casi iPhone" mejor que nunca!</div> 
			</div> 
			<div class="opbody"> 
			<div class="opautor"> <span class="autor_rev_link">Autor: <b><%= review.customer.nickname %> (<%= review.customer.points %>) </b></span> </div> 
			<div class="proscons"> 
				<div class="pros"><b>Pros:</b><br>
					<%= new_line_to_br review.pros %>
				</div> 
				<div class="contras"><b>Contras:</b><br>
					<%= new_line_to_br review.contras %>
				</div> 
			</div> 
			<div class="opconcl"> 
				<p><b>Conclusión:</b><br>
					<%= new_line_to_br review.conclusion %>
				</p> 
			</div>     
			<div class="rbroundbox">
				<div class="rbtop">
					<div></div>
				</div>
				<div class="rbcontent">
                    <div class="opvote">
						<div id="votacion405825" style="display: block;" class="votaciondiv">
							<div class="votetxt">¿Te resultó útil esta opinión?</div>
							<div class="btndiv">
								<input name="si" onclick="javascript:voteReview('405825',true);" value="Sí" class="btnSI" type="button">
							</div>

							<div class="btndiv">
								<input name="no" onclick="javascript:voteReview('405825',false);" value="No" class="btnNO" type="button">
							</div>
						</div>

						<div id="notReg" style="margin: 5px 0pt; display: none;">¿Te resultó útil esta opinión?<img src="/org-img/t.gif" width="8">
							<input name="si" onclick="login('405825',true);" value="Sí" src="/org-img/catalog/pdp/votar_si.gif" height="28" type="image" width="32">
							<input name="no" onclick="login('405825',false);" value="No" src="/org-img/catalog/pdp/votar_no.gif" height="28" type="image" width="32">
						</div>

						<div id="error" style="display: none;"><!--##MSJ_ERROR##--></div>
					</div>
					<div class="oputil" id="votos405825"><b><%= review.qty_pos %></b> de <%= review.qty_votes %> usuarios <b>votaron como útil esta opinión.</b></div> 
					<div id="footerReview405825" class="tks"></div> 
				</div>
				<div class="rbbot">
					<div></div>
				</div>
			</div>    
			<div class="opdenu">
				<div class="link_opden"></div>
				<a href="http://www.mercadolibre.com.ar/argentina/ml/org_ayuda.main?as_new_tkt=2190&amp;as_faq_rvw_id=405825&amp;as_subject=Esta+opinion+no+cumple+con+las+politicas+del+sitio">Denunciar opinión</a> 
			</div>  
		</div> 
	</div>
	<% end %>
</div>
</div>
</div>

