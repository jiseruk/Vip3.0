<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Points</th>
    <th>Customer</th>
    <th>Catalog product</th>
    <th>Pros</th>
    <th>Contras</th>
    <th>Conclusion</th>
    <th>Qty votes</th>
    <th>Qty pos</th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%=h review.title %></td>
    <td><%=h review.points %></td>
    <td><%=h review.customer %></td>
    <td><%=h review.catalog_product %></td>
    <td><%=h review.pros %></td>
    <td><%=h review.contras %></td>
    <td><%=h review.conclusion %></td>
    <td><%=h review.qty_votes %></td>
    <td><%=h review.qty_pos %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New review', new_review_path %>